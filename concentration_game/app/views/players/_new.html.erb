
<%= bootstrap_form_for Player.new do |f| %>

  <%= f.hidden_field :game_id, value: @game.id %>
  <%= f.hidden_field :points, value: 0 %>

  <div class="row">
    <div class="col-xs-4">
      <%= f.text_field(:name, label: "Please enter your name.") %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-6">
      <%= f.submit("Continue") %>
    </div>
  </div>

<% end %>